{
  "MarkdownPaste.path": "${workspaceRoot}/assets/images/${fileBasename}",
  "MarkdownPaste.namePrefix": "${selectedText}",
  "MarkdownPaste.nameBase": "${datetime|yyyy-MM-DD-HH-mm-ss}",
  "MarkdownPaste.nameSuffix": "",
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "markdownlint.config": {
    "MD033": false,
    "MD002": false,
    "MD041": false,
    "MD045": false
  },
  // Use customized Math expression inline delimiters.
  "markdown-preview-enhanced.mathInlineDelimiters": [["$$", "$$"]],
  // Use customized Math expression block delimiters.
  "markdown-preview-enhanced.mathBlockDelimiters": [["\\[", "\\]"]],
  "cSpell.words": ["mathjax"],
  "markdown-preview-enhanced.mermaidTheme": "forest",
  "[html]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "vscode.html-language-features"
  }
}
